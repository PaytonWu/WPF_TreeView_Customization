                              BorderThickness="1,1,1,1"/>
                <TreeViewItem Header="6. Secondly Header"
                              FontWeight="Normal"
                              FontSize="13"
                              BorderBrush="#FFCBCBCB"
                              BorderThickness="1,1,1,1"/>
                <TreeViewItem Header="7. Secondly Header"
                              FontWeight="Normal"
                              FontSize="13"
                              BorderBrush="#FFCBCBCB"
                              BorderThickness="1,1,1,1"/>
                <TreeViewItem Header="8. Secondly Header"
                              FontWeight="Normal"
                              FontSize="13"
                              BorderBrush="#FFCBCBCB"
                              BorderThickness="1,1,1,1"/>
                <TreeViewItem Header="9. Secondly Header"
                              FontWeight="Normal"
                              FontSize="13"
                              BorderBrush="#FFCBCBCB"
                              BorderThickness="1,1,1,1"/>
            </TreeViewItem>
        </TreeView>
    </DockPanel>
</Window>

